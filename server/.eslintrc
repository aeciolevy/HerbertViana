{
    "extends": "airbnb-base",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "class-methods-use-this": 0,
        "consistent-return": 0,
        "no-unused-vars": [
            "warn",
            {
                "vars": "all",
                "args": "after-used",
                "ignoreRestSiblings": false
            }
        ],
        "object-curly-newline": [
            "warn",
            {
                "multiline": true,
                "minProperties": 4
            }
        ],
        "new-cap": [
            "error",
            {
                "capIsNew": false
            }
        ],
        "linebreak-style": "off",
        "no-plusplus": "off",
        "no-underscore-dangle": [
            "error",
            {
                "allow": [
                    "_id"
                ]
            }
        ]
    }
}
